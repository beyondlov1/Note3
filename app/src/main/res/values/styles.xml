<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSienna</item>
        <item name="colorPrimaryDark">@color/colorSaddleBrown</item>
        <item name="colorAccent">@color/colorBrown</item>
    </style>
    <style name="NoBackgroundDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/corner</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
